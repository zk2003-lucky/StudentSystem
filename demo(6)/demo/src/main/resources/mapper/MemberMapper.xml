<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.clubmanagement.mapper.MemberMapper">
    <select id="findAll" resultType="Member">
        SELECT * FROM member
    </select>
    <select id="findById" resultType="Member">
        SELECT * FROM member WHERE id = #{id}
    </select>
    <insert id="insert" parameterType="Member" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO member(name, clubId) VALUES(#{name}, #{clubId})
    </insert>
    <update id="update" parameterType="Member">
        UPDATE member SET name = #{name}, clubId = #{clubId} WHERE id = #{id}
    </update>
    <delete id="delete">
        DELETE FROM member WHERE id = #{id}
    </delete>
</mapper>
